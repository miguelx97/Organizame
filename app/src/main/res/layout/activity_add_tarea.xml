<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddTareaActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" android:layout_height="?attr/actionBarSize" android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="-16dp"
            tools:layout_editor_absoluteX="-178dp" android:id="@+id/linearLayout3">
    </LinearLayout>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/etTitulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="110dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Titulo" android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>
    <Button style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/anadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAnadir" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/etDescripcion" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/etTitulo"
            android:hint="Descripcion"/>
    <Switch
            android:text="Prioridad alta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/swPrioritario" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/etDescripcion"
            app:layout_constraintHorizontal_bias="0" android:layout_marginStart="40dp"/>

    <Button
            android:text="AÃ±adir Fecha y hora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnFechaHora"
            android:background="@drawable/red_btn"
            android:textColor="@color/colorPrimary" app:layout_constraintTop_toBottomOf="@+id/swPrioritario"
            android:layout_marginTop="65dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout3" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="40dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/swPrioritario"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/red_style_border" android:layout_marginEnd="40dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btnAnadir"
            android:layout_marginTop="100dp" app:layout_constraintVertical_bias="0.26"
            android:id="@+id/lyFechaHora" android:visibility="invisible">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lyFecha"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp" app:srcCompat="@drawable/calendario"
                    android:id="@+id/ivCalendario"
                    app:layout_constraintTop_toBottomOf="@+id/etDescripcion"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.288" app:layout_constraintStart_toEndOf="@+id/tvHora"/>
            <TextView
                    android:text="@string/escoge_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:id="@+id/tvFecha" app:layout_constraintStart_toEndOf="@+id/ivCalendario"
                    android:layout_marginStart="5dp" android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/etDescripcion"/>
        </LinearLayout>
        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp" android:layout_marginStart="20dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lyHora"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp" app:srcCompat="@drawable/reloj"
                    android:id="@+id/ivReloj"
                    app:layout_constraintTop_toBottomOf="@+id/etDescripcion"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.204"/>
            <TextView
                    android:text="@string/escoge_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:id="@+id/tvHora" app:layout_constraintStart_toEndOf="@+id/ivReloj"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/etDescripcion" android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>