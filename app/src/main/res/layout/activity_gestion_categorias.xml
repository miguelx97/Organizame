<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.GestionCategoriasActivity">

    <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" android:layout_height="?attr/actionBarSize" android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:id="@+id/etTitulo" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent" android:autofillHints="" android:hint="@string/nombre"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:id="@+id/lyColores"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/etTitulo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/toolbar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3" app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="40dp" android:gravity="center"
            android:padding="5dp" android:layout_marginTop="40dp">
        <TextView
                android:text="Color de categorÃ­a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvColores"
                android:textColor="@android:color/tertiary_text_light"
                android:layout_marginEnd="20dp" android:textSize="16sp"/>
        <View
                android:layout_width="40dp"
                android:layout_height="40dp" android:id="@+id/viewColor" android:layout_weight="1"
                android:background="@drawable/color_circle"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="484dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/lyColores"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp">

        <android.support.v7.widget.RecyclerView
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvCategorias"
                android:clipChildren="true"/>

    </LinearLayout>
    <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAnadir" app:layout_constraintStart_toEndOf="@+id/lyColores"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/etTitulo"
            app:layout_constraintHorizontal_bias="1" android:text="@string/anadir"/>

</android.support.constraint.ConstraintLayout>